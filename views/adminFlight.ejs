<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Flights - FlightBooking</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 font-sans">
    <!-- Navbar -->
    <nav class="bg-gray-800 p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <a class="text-white text-2xl font-bold hover:text-gray-300 transition duration-300" href="/admin/dashboard">FlightBooking Admin</a>
            <div>
                <a href="/admin/logout" class="text-white hover:text-gray-300 transition duration-300">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto mt-8 px-4">
        <div class="bg-white p-6 rounded-lg shadow-lg">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-3xl font-bold text-gray-800">All Flights</h2>
                <a href="/admin/flights/add" class="bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded transition duration-300">Add New Flight</a>
            </div>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white">
                    <thead class="bg-gray-200 text-gray-700">
                        <tr>
                            <th class="py-3 px-4 text-left">Flight Number</th>
                            <th class="py-3 px-4 text-left">Departure</th>
                            <th class="py-3 px-4 text-left">Arrival</th>
                            <th class="py-3 px-4 text-left">Departure Time</th>
                            <th class="py-3 px-4 text-left">Arrival Time</th>
                            <th class="py-3 px-4 text-left">Price</th>
                            <th class="py-3 px-4 text-left">Seats</th>
                            <th class="py-3 px-4 text-left">Available Seats</th>
                            <th class="py-3 px-4 text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-600">
                        <% flights.forEach(function(flight) { %>
                        <tr class="hover:bg-gray-100 transition duration-200">
                            <td class="py-3 px-4"><%= flight.flightNumber %></td>
                            <td class="py-3 px-4"><%= flight.departure %></td>
                            <td class="py-3 px-4"><%= flight.arrival %></td>
                            <td class="py-3 px-4"><%= flight.departureTime %></td>
                            <td class="py-3 px-4"><%= flight.arrivalTime %></td>
                            <td class="py-3 px-4">$<%= flight.price %></td>
                            <td class="py-3 px-4"><%= flight.seats %></td>
                            <td class="py-3 px-4"><%= flight.availableSeats %></td>
                            <td class="py-3 px-4">
                                <a href="/admin/flights/edit/<%= flight._id %>" class="text-blue-500 hover:text-blue-700 mr-2">Edit</a>
                                <form action="/admin/flights/delete/<%= flight._id %>" method="POST" class="inline">
                                    <button type="submit" class="text-red-500 hover:text-red-700" onclick="return confirm('Are you sure you want to delete this flight?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
